
@{
    ViewBag.Title = "Index";
}


<style>
    #imagePreviewCivil_Id_Front img {
        max-width: 150px;
        max-height: 150px;
    }

    #imagePreviewCivil_Id_Back img {
        max-width: 150px;
        max-height: 150px;
    }

    .ibox-title-section {
        -moz-border-bottom-colors: none;
        -moz-border-left-colors: none;
        -moz-border-right-colors: none;
        -moz-border-top-colors: none;
        background-color: #263949;
        border-color: #E7EAEC;
        border-image: none;
        border-style: solid solid none;
        border-width: 2px 0px 0px;
        color: #FFF;
        margin-bottom: 10px;
        padding: 5px 15px 2px;
        min-height: 48px;
        border-top-left-radius: 0px;
        border-top-right-radius: 0px;
    }
</style>



<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2 style="display: inline-block;"><i class="fa fa-users"></i>&nbsp;Remitters List </h2>
@*                <a href="@Url.Action("Add", "Remitter")" class="btn btn-primary" style="float: right; margin-top:5px;">Add Remitter</a>
*@            </div>

            <div class="ibox ibox-content">

                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label>Full Name</label>
                            <input type="text" id="Name" placeholder="Enter Name" class="form-control validate" name="Name" data-validation-target=".text-danger">
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label>Civil ID</label>
                            <input type="text" id="Identification_Number" placeholder="Enter Civil ID" class="form-control" name="Identification_Number">
                        </div>
                    </div>

                    <!-- Adding a full-width row for the button -->
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="form-group ">
                            <!-- Move the button to the right with text-right class -->
                            <input type="submit" id="btnsearch" name="btnsearch" value="Search" class="btn btn-success" style="margin-top: 7px; text-align: center;">
                            <button type="button" id="btnclear" class="btn btn-danger" style="margin-top: 7px; margin-left: 10px;">Clear</button>

                        </div>
                    </div>
                </div>


                <table id="tblUsers" class="table table-striped table-bordered table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th class="hidden">UID</th>
                            <th>Name</th>
                            <th>Identification Type</th>
                            <th>Identification Number</th>
                            <th>Email Address</th>
                            <th>Identification Expiry Date</th>
                            <th>Review Status</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody id="tblbody"></tbody>
                </table>

            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <a id="btn-sync" name="btn-sync" class="btn btn-primary pull-right"><i class="fa fa-reorder"></i>&nbsp; Synchronize Remitter Data</a>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Assets/PagesJS/Remitter.js"></script>
<script type="module" src="~/Assets/PagesJS/ajaxUtility.js"></script>





