
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox">
            <div class="ibox-heading">
                <div class="ibox-title">
                    <h2><i class="fa fa-users"></i>&nbsp; Add/Edit Currency</h2>
                </div>
            </div>
            <div class="ibox ibox-content">
                <form class="form-group frmAddCurrency">
                    <div class="row hidden">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <input type="text" id="Id" class="form-control" name="Id">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Currency Name<span style="color:red;">*</span></label>
                                <small><span class="text-danger required-text" id="ValName"></span></small>
                                <input type="Text" id="Name" placeholder="Enter Currency Name" class="form-control" name="Name" >
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Currency Code<span style="color:red;">*</span></label>
                                <small><span class="text-danger required-text" id="ValCode"></span></small>
                                <input type="Text" id="Code" placeholder="Enter Currency Code" class="form-control" name="Code">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Rate<span style="color:red;">*</span></label>
                                <small><span class="text-danger required-text" id="ValDD_Rate"></span></small>
                                <input type="Number" id="DD_Rate" placeholder="Enter Rate" class="form-control" name="DD_Rate">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label style="margin-top:5px">Status</label>
                                <div class="i-checks">
                                    <label>
                                        <input type="checkbox" class="icheckbox_square-green" id="Status" name="Status" />
                                        <i></i>
                                        Active
                                    </label>

                                </div>

                            </div>
                        </div>

                    </div>
                  
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <a id="btn-save" name="btn-save" class="btn btn-primary pull-right"><i class="fa fa-save"></i>&nbsp; Save</a>
                            <a id="btn-refresh" name="btn-refresh" class="btn btn-info pull-right" style="margin-right:5px;"><i class="fa fa-refresh"></i>&nbsp; Reset</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2><i class="fa fa-users"></i>&nbsp;Currency List </h2>

            </div>
            <div class="ibox ibox-content">

                <table id="tblUsers" class="table table-striped table-bordered table-hover" style=" width: 100%;">
                    <thead>
                        <tr>
                            <th class="hidden">Id</th>
                            <th>Currency Name</th>
                            <th>Code</th>
                            <th>Rate</th>
                            <th>Status</th>
                            <th>Actions</th>

                        </tr>
                    </thead>
                    <tbody id="tblbody"></tbody>
                </table>

            </div>
           @* <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <a id="btn-sync" name="btn-sync" class="btn btn-primary pull-right"><i class="fa fa-reorder"></i>&nbsp; Synchronize City Data</a>
                </div>
            </div>*@
        </div>
    </div>
</div>



<script src="~/Assets/PagesJS/Currency.js"></script>



