
@{
    ViewBag.Title = "Limits";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox">
            <div class="ibox-heading">
                <div class="ibox-title">
                    <h2 style="display: inline-block;"><i class="fa fa-users"></i>&nbsp;Add/Delete Currency Limits </h2>
                    <h3 style="float: right; margin-top:5px;">@ViewBag.CurrencyInfo</h3>
                </div>


            </div>
            <div class="ibox ibox-content">
                <form class="form-group frmAddCurrencyLimit">
                    <div class="row hidden">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <input type="text" id="UID" class="form-control" name="UID">
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Amount<span style="color:red;">*</span>    <small><span class="text-danger required-text" > (In KWD)</span></small> </label>
                                <small><span class="text-danger required-text" id="ValAmount"></span></small>
                                <input type="Number" id="Amount" placeholder="Enter Amount" class="form-control" name="Amount">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Compirison<span style="color:red">*</span></label>
                                <small><span class="text-danger required-text" id="ValComparison_Id"></span></small>
                                <select class="form-control chzn" id="Comparison_Id" name="Comparison_Id"></select>

                            </div>
                        </div>


                    </div>
                    <div class="row">


                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Rate<span style="color:red;">*</span></label>
                                <small><span class="text-danger required-text" id="ValDD_Rate"></span></small>
                                <input type="Number" id="DD_Rate" placeholder="Enter Rate" class="form-control" name="DD_Rate">
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <a id="btn-save" name="btn-save" class="btn btn-primary pull-right"><i class="fa fa-save"></i>&nbsp; Save</a>
                            <a id="btn-refresh" name="btn-refresh" class="btn btn-info pull-right" style="margin-right:5px;"><i class="fa fa-refresh"></i>&nbsp; Reset</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2><i class="fa fa-users"></i>&nbsp;Limits</h2>

            </div>
            <div class="ibox ibox-content">

                <table id="tblCurrencyLimits" class="table table-striped table-bordered table-hover" style=" width: 100%;">
                    <thead>
                        <tr>
                            <th class="hidden">Id</th>
                            <th>Amount</th>
                            <th>Rate</th>
                            <th>Description</th>
                            <th>Actions</th>

                        </tr>
                    </thead>
                    <tbody id="tblbody"></tbody>
                </table>

            </div>
        </div>
    </div>
</div>



<script src="~/Assets/PagesJS/Limits.js"></script>






