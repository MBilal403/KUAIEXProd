
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox">
            <div class="ibox-heading">
                <div class="ibox-title">
                    <h2><i class="fa fa-users"></i>&nbsp; Add/Edit Country Currency</h2>
                </div>
            </div>
            <div class="ibox ibox-content">
                <form class="form-group frmAddCountryCurrency">
                    <div class="row hidden">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <input type="text" id="Id" class="form-control" name="Id">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Country<span style="color:red">*</span></label>
                                <small><span class="text-danger required-text" id="ValCountry_Id"></span></small>
                                <select class="form-control chzn" id="Country_Id" name="Country_Id"></select>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Currency<span style="color:red">*</span></label>
                                <small><span class="text-danger required-text" id="ValCurrency_Id"></span></small>
                                <select class="form-control chzn" id="Currency_Id" name="Currency_Id"></select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Commission Rate 1<span style="color:red;">*</span></label>
                                <small><span class="text-danger required-text" id="ValCommissionRate1"></span></small>
                                <input type="Number" id="CommissionRate1" placeholder="Enter Commission Rate 1" class="form-control" name="CommissionRate1">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Amount Limit<span style="color:red;">*</span></label>
                                <small><span class="text-danger required-text" id="ValAmountLimit"></span></small>
                                <input type="Number" id="AmountLimit" placeholder="Enter Amount Limit" class="form-control" name="AmountLimit">
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Commission Rate 2<span style="color:red">*</span></label>
                                <small><span class="text-danger required-text" id="ValCommissionRate2"></span></small>
                                <input type="Number" id="CommissionRate2" placeholder="Enter Commission Rate 2" class="form-control" name="CommissionRate2">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Display Order<span style="color:red">*</span></label>
                                <small><span class="text-danger required-text" id="ValDisplayOrder"></span></small>
                                <select class="form-control chzn" id="DisplayOrder" name="DisplayOrder">
                                    <option value="1" class=" text-light" style="font-size: 16px;" selected>1</option>
                                    <option value="2" class=" text-light" style="font-size: 16px;">2</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <a id="btn-save" name="btn-save" class="btn btn-primary pull-right"><i class="fa fa-save"></i>&nbsp; Save</a>
                            <a id="btn-refresh" name="btn-refresh" class="btn btn-info pull-right" style="margin-right:5px;"><i class="fa fa-refresh"></i>&nbsp; Reset</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2><i class="fa fa-users"></i>&nbsp;Country Currency List </h2>

            </div>
            <div class="ibox ibox-content">

                <table id="tblUsers" class="table table-striped table-bordered table-hover" style=" width: 100%;">
                    <thead>
                        <tr>
                            <th class="hidden">Id</th>
                            <th>Country Name</th>
                            <th>Currency Name</th>
                            <th>Commission Rate 1</th>
                            <th>Commission Rate 2</th>
                            <th>AmountLimit</th>
                            <th>DisplayOrder</th>
                            <th>Actions</th>

                        </tr>
                    </thead>
                    <tbody id="tblbody"></tbody>
                </table>

            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <a id="btn-sync" name="btn-sync" class="btn btn-primary pull-right"><i class="fa fa-reorder"></i>&nbsp; Synchronize Country Currency Data</a>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/Assets/PagesJS/CountryCurrency.js"></script>



