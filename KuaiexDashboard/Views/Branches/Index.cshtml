
@{
    ViewBag.Title = "Index";
}

<div class="row">


    <div class="col-lg-4 col-md-4 col-sm-4">
        <div class="form-group">
            <label>Country<span style="color:red">*</span></label>
            <select class="form-control chzn" id="Country_Id" required="required" name="Country_Id"></select>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4">
        <div class="form-group">
            <label>Banks<span style="color:red">*</span></label>
            <select class="form-control chzn" id="Bank_Id" required="required" name="Bank_Id"></select>
        </div>
    </div><br />
    <div class="col-lg-4 col-md-4 col-sm-4">
        <input type="submit" id="btnsearch" name="btn-search" value="Search" class="btn btn-success pull-left btnsearch" />
    </div>

</div>

<div class="row hidden">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox">
            <div class="ibox-heading">
                <div class="ibox-title">
                    <h2><i class="fa fa-users"></i>&nbsp; Add/Edit Branches</h2>
                </div>
            </div>
            <div class="ibox ibox-content">
                <form class="form-group frmAddbank">
                    <div class="row hidden">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>UID<span style="color:red;">*</span></label>
                                <input type="text" id="UID" class="form-control" name="UID">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>English_Name<span style="color:red;">*</span></label>
                                <input type="text" id="English_Name" placeholder="Enter Name" class="form-control" name="English_Name">
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Arabic_Name<span style="color:red">*</span></label>
                                <input type="text" id="Arabic_Name" placeholder="Enter Name" class="form-control" name="Arabic_Name">
                                @*<select class="form-control chzn" id="UserTypeId" required="required" name="UserTypeId"></select>*@
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Short_English_Name<span style="color:red;">*</span></label>
                                <input type="text" id="Short_English_Name" placeholder="Enter  Name" class="form-control" name="Short_English_Name">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Short_Arabic_Name<span style="color:red;">*</span></label>
                                <input type="text" id="Short_Arabic_Name" placeholder="Short_Arabic_Name" class="form-control" name="Short_Arabic_Name" required="required">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Country</label>
                                <select class="form-control chzn" id="Country_Id" required="required" name="Country_Id"></select>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Currency </label>
                                <select class="form-control chzn" id="Currency_Id" required="required" name="Currency_Id"></select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Upper_Limit<span style="color:red;">*</span></label>
                                <input type="text" id="Upper_Limit" placeholder="Enter  Name" class="form-control" name="Upper_Limit">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Address_Line1<span style="color:red;">*</span></label>
                                <input type="text" id="Address_Line1" placeholder="Address_Line1" class="form-control" name="Address_Line1" required="required">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Address_Line2<span style="color:red;">*</span></label>
                                <input type="text" id="Address_Line2" placeholder="Address_Line2" class="form-control" name="Address_Line2">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Address_Line3<span style="color:red;">*</span></label>
                                <input type="text" id="Address_Line3" placeholder="Address_Line3" class="form-control" name="Address_Line3" required="required">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Tel_Number<span style="color:red;">*</span></label>
                                <input type="text" id="Tel_Number1" placeholder="Enter  Tel_Number" class="form-control" name="Tel_Number1">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Fax_Number<span style="color:red;">*</span></label>
                                <input type="text" id="Address_Line1" placeholder="Fax_Number1" class="form-control" name="Fax_Number1">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Email_Address<span style="color:red;">*</span></label>
                                <input type="text" id="EMail_Address1" placeholder="Enter  Email_Address1" class="form-control" name="EMail_Address1">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Prefix_Draft<span style="color:red;">*</span></label>
                                <input type="text" id="Prefix_Draft" placeholder="Prefix_Draft" class="form-control" name="Prefix_Draft">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Sufix_Draft<span style="color:red;">*</span></label>
                                <input type="text" id="Sufix_Draft" placeholder="Enter  Tel_Number" class="form-control" name="Sufix_Draft">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Reimbursement_Text_Status<span style="color:red;">*</span></label>
                                <input type="text" id="Reimbursement_Text_Status" placeholder="Fax_Number1" class="form-control" name="Reimbursement_Text_Status">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Contact_Person<span style="color:red;">*</span></label>
                                <input type="text" id="Contact_Person1" placeholder="Enter  EMail_Address1" class="form-control" name="Contact_Person1">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Contact_Title<span style="color:red;">*</span></label>
                                <input type="text" id="Contact_Title1" placeholder="Contact_Title" class="form-control" name="Contact_Title1">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Mob_Number<span style="color:red;">*</span></label>
                                <input type="text" id="Mob_Number1" placeholder="Enter  Mob_Number1" class="form-control" name="Mob_Number1">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Contact_Person 2<span style="color:red;">*</span></label>
                                <input type="text" id="Contact_Person2" placeholder="Contact_Person2" class="form-control" name="Contact_Person2">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Contact_Title2<span style="color:red;">*</span></label>
                                <input type="text" id="Contact_Title2" placeholder="Enter  Contact_Title2" class="form-control" name="Contact_Title2">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Mob_Number2<span style="color:red;">*</span></label>
                                <input type="text" id="Mob_Number2" placeholder="Mob_Number2" class="form-control" name="Mob_Number2">
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Remarks<span style="color:red;">*</span></label>
                                <input type="text" id="Remarks" placeholder="Enter  Remarks" class="form-control" name="Remarks">
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-sm-6">
                            <div class="form-group">
                                <label style="margin-top:5px">Record_Status</label>
                                <div class="i-checks">
                                    <label>
                                        <input type="checkbox" class="icheckbox_square-green" id="Record_Status" name="Record_Status" />
                                        <i></i>
                                        Is Active
                                    </label>

                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <a id="btn-save" name="btn-save" class="btn btn-primary pull-right"><i class="fa fa-save"></i>&nbsp; Save</a>
                            <a id="btn-refresh" name="btn-refresh" class="btn btn-info pull-right" style="margin-right:5px;"><i class="fa fa-refresh"></i>&nbsp; Reset</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2><i class="fa fa-users"></i>&nbsp;Branches List </h2>

            </div>
            <div class="ibox ibox-content">

                <table id="tblbank" class="table table-striped table-bordered table-hover"  style=" width: 100%;">
                    <thead>
                        <tr>
                            <th class="hidden">UID</th>
                            <th>Branch Name</th>
                            <th>Bank Name</th>
                            <th>Address </th>
                            <th>Country</th>
                            <th>Email</th>

                        </tr>
                    </thead>
                    <tbody id="tblbody"></tbody>
                </table>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <a id="btn-sync" name="btn-sync" class="btn btn-primary pull-right"><i class="fa fa-reorder"></i>&nbsp; Synchronize Bank Branches Data</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



<script src="~/Assets/PagesJS/branches.js"></script>



