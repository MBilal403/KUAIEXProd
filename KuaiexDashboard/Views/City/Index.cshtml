
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox">
            <div class="ibox-heading">
                <div class="ibox-title">
                    <h2><i class="fa fa-users"></i>&nbsp; Add/Edit City</h2>
                </div>
            </div>
            <div class="ibox ibox-content">
                <form class="form-group frmAddUsers">
                    <div class="row hidden">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>UID<span style="color:red;">*</span></label>
                                <input type="text" id="UID" class="form-control" name="UID">
                            </div>
                        </div>
                    </div>

                    <div class="row">


                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Country<span style="color:red">*</span></label>
                                <select class="form-control chzn" id="Country_Id" required="required" name="Country_Id"></select>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Name<span style="color:red;">*</span></label>
                                <input type="text" id="Name" placeholder="Enter Name" class="form-control" name="Name">
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-lg-6 col-sm-6 col-sm-6">
                            <div class="form-group">
                                <label style="margin-top:5px">Status</label>
                                <div class="i-checks">
                                    <label>
                                        <input type="checkbox" class="icheckbox_square-green" id="Status" name="Status" />
                                        <i></i>
                                        Active
                                    </label>

                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <a id="btn-save" name="btn-save" class="btn btn-primary pull-right"><i class="fa fa-save"></i>&nbsp; Save</a>
                            <a id="btn-refresh" name="btn-refresh" class="btn btn-info pull-right" style="margin-right:5px;"><i class="fa fa-refresh"></i>&nbsp; Reset</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2><i class="fa fa-users"></i>&nbsp;Cities List </h2>

            </div>
            <div class="ibox ibox-content">

                <table id="tblUsers" class="table table-striped table-bordered table-hover"  style=" width: 100%;">
                    <thead>
                        <tr>
                            <th class="hidden">UID</th>
                            <th>City Name</th>
                            <th>Country Name</th>
                            <th>Status</th>
                            <th>Action</th>
                          
                        </tr>
                    </thead>
                    <tbody id="tblbody"></tbody>
                </table>

            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <a id="btn-sync" name="btn-sync" class="btn btn-primary pull-right"><i class="fa fa-reorder"></i>&nbsp; Synchronize City Data</a>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/Assets/PagesJS/City.js"></script>



