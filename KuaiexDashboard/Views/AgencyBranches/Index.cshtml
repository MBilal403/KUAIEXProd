
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox">
            <div class="ibox-heading">
                <div class="ibox-title">
                    <h2><i class="fa fa-users"></i>&nbsp; Add/Edit Agency Branches</h2>
                </div>
            </div>
            <div class="ibox ibox-content">
                <form class="form-group frmAddUsers">
                    <div class="row hidden">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>ID<span style="color:red;">*</span></label>
                                <input type="text" id="Id" class="form-control" name="Id">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Branch Name<span style="color:red;">*</span></label>
                                <input type="text" id="Name" placeholder="Enter Barnch Name" class="form-control" name="Name">
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Contact No<span style="color:red">*</span></label>
                                <input type="text" id="ContactNo" placeholder="Enter Contact No " class="form-control" name="ContactNo">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Address<span style="color:red;">*</span></label>
                                <input type="text" id="Address" placeholder="Enter Address" class="form-control" name="Address">
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Longitude <span style="color:red">*</span></label>
                                <input type="text" id="Longitude" placeholder="Enter Longitude " class="form-control" name="Longitude">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Latitude <span style="color:red">*</span></label>
                                <input type="text" id="Latitude" placeholder="Enter Latitude " class="form-control" name="Latitude">
                            </div>
                        </div>

                        <div class="col-lg-6 col-sm-6 col-sm-6">
                            <div class="form-group">
                                <label style="margin-top:5px">Status</label>
                                <div class="i-checks">
                                    <label>
                                        <input type="checkbox" class="icheckbox_square-green" id="Status" name="Status" />
                                        <i></i>
                                        Active
                                    </label>

                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <a id="btn-save" name="btn-save" class="btn btn-primary pull-right"><i class="fa fa-save"></i>&nbsp; Save</a>
                            <a id="btn-refresh" name="btn-refresh" class="btn btn-info pull-right" style="margin-right:5px;"><i class="fa fa-refresh"></i>&nbsp; Reset</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2><i class="fa fa-users"></i>&nbsp;Agency Branches List </h2>

            </div>
            <div class="ibox ibox-content">

                <table id="tblUsers" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="hidden">UID</th>
                            <th>Branches Name</th>
                            <th>Contact No</th>
                            <th>Address</th>
                            <th>Longitude </th>
                            <th>Latitude </th>
                            <th>Status</th>
                            <th>Action</th>
                            @*<th></th>*@
                        </tr>
                    </thead>
                    <tbody id="tblbody"></tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<script src="~/Assets/PagesJS/AgencyBranches.js"></script>