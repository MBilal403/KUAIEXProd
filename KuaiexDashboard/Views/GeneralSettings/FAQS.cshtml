
@{
    ViewBag.Title = "FAQS";
}


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox">
            <div class="ibox-heading">
                <div class="ibox-title">
                    <h2><i class="fa fa-users"></i>&nbsp; Add/Edit FAQs</h2>
                </div>
            </div>
            <div class="ibox ibox-content">
                <form class="form-group frmAddUsers">
                    <div class="row hidden">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>ID<span style="color:red;">*</span></label>
                                <input type="text" id="Id" class="form-control" name="Id">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label>Question<span style="color:red;">*</span></label>
                                <input type="text" id="Question" placeholder="Enter Question" class="form-control" name="Question">
                            </div>
                        </div>
                    </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group">
                                    <label>Answer<span style="color:red">*</span></label>
                                    @*<textarea clas="text" id="Answer" placeholder="Enter Answer" class="form-control" name="Answer">*@
                                    <textarea class="form-control" id="Answer" name="Answer" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-lg-6 col-sm-6 col-sm-6">
                                <div class="form-group">
                                    <label style="margin-top:5px">Status</label>
                                    <div class="i-checks">
                                        <label>
                                            <input type="checkbox" class="icheckbox_square-green" id="Status" name="Status" />
                                            <i></i>
                                            Active
                                        </label>

                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <a id="btn-save" name="btn-save" class="btn btn-primary pull-right"><i class="fa fa-save"></i>&nbsp; Save</a>
                                <a id="btn-refresh" name="btn-refresh" class="btn btn-info pull-right" style="margin-right:5px;"><i class="fa fa-refresh"></i>&nbsp; Reset</a>
                            </div>
                        </div>
</form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2><i class="fa fa-users"></i>&nbsp;FAQs List </h2>

            </div>
            <div class="ibox ibox-content">

                <table id="tblUsers" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="hidden">ID</th>
                            <th>Questions</th>
                            <th>Answers </th>
                            <th>Status</th>
                            <th>Action</th>
                            @*<th></th>*@
                        </tr>
                    </thead>
                    <tbody id="tblbody"></tbody>
                </table>

            </div>
        </div>
    </div>
</div>



<script src="~/Assets/PagesJS/FAQS.js"></script>


