
@{
    ViewBag.Title = "PrivacyPolicy";
}

@*<script src="~/Scripts/ckeditor/ckeditor.js"></script>*@
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox">
            <div class="ibox-heading">
                <div class="ibox-title">
                    <h2><i class="fa fa-users"></i>&nbsp; Add Privacy Policy</h2>
                </div>
            </div>
            <div class="ibox ibox-content">
                <form class="form-group frmAddUsers">
                    <div class="row hidden">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>ID<span style="color:red;">*</span></label>
                                <input type="text" id="Id" class="form-control" name="Id">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label>Title<span style="color:red;">*</span></label>
                                <input type="text" id="Title" placeholder="Enter Title" class="form-control" name="Title">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label>Description<span style="color:red">*</span></label>
                                @*<input type="text" id="Title"  placeholder="Enter Title" class="form-control" name="Title" ckeditor>*@
                                <textarea class="form-control" id="Description" name="Description" rows="5"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <a id="btn-save" name="btn-save" class="btn btn-primary pull-right"><i class="fa fa-save"></i>&nbsp; Save</a>
                            <a id="btn-refresh" name="btn-refresh" class="btn btn-info pull-right" style="margin-right:5px;"><i class="fa fa-refresh"></i>&nbsp; Reset</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/Assets/PagesJS/PrivacyPolicy.js"></script>